HOST=0.0.0.0
PORT=8000
PYTHON_BIN=python3
JOBS_DIR=../jobs
AGENT_SCRIPT=../python/agent.py
LOG_DIR=../logs
AGENT_LOG_FILE=../logs/agent.log
REQUEST_RECORD_FILE=../request_records.txt

# 可选：按“浏览器”每日限制次数（通过 cookie 标识；0 为不限制）
DAILY_LIMIT_PER_BROWSER=0

# 可选：绕过限制的 Key（前端“高级选项”可填写；留空则不启用）
BYPASS_KEY=

# 可选：job 结果缓存清理（按完成时间）
# 0 表示不自动删除；默认 3600（保留 1 小时）
JOBS_TTL_SECONDS=3600
# 清理扫描间隔（秒），默认 600（10 分钟）
JOBS_CLEANUP_INTERVAL_SECONDS=600

# 以下变量由 deploy.sh 使用，用于 nginx 与 systemd 配置
DOMAIN=example.com
EXTERNAL_PORT=443
CERT_PATH=/etc/letsencrypt/live/example.com/fullchain.pem
KEY_PATH=/etc/letsencrypt/live/example.com/privkey.pem
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
CLIENT_MAX_BODY_SIZE=200M
